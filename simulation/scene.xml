<mujoco model="scene">
    <include file="so101_new_calib.xml"/>
    <include file="objects.xml"/>

    <option timestep="0.002">
		<flag warmstart="enable"/>
	</option>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="160" elevation="-20" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" rgba="0.2 0.2 0.2 1"/>
        <material name="table_material" specular="0" shininess="0.5" reflectance="0" rgba="0.2 0.2 0.2 1"/>
    </asset>

    <worldbody>
        <camera name="main_cam" pos="0.4 0.4 1.0" mode="targetbody" target="base"/>

        <light pos="0 0 3.5" dir="0 0 -1" directional="true"/>
        <geom name="floor" size="0 0 0.05" pos="0 0 0" type="plane" material="groundplane"/>

        <body pos="0 0 0.2" name="table0">
			<geom size="0.5 0.6 0.2" type="box" mass="2000" material="table_material"/>
		</body>

        <body name="target" pos="0.5 0 .5" quat="0 1 0 0" mocap="true">
            <geom type="box" size=".03 .02 .01" contype="0" conaffinity="0" rgba=".6 .6 0.0 .2"/>
        </body>
    </worldbody>
</mujoco>